{% set consul_advertise_addrs = play_hosts | map('extract', hostvars, 'consul_advertise_addr') | list %}
{% set consul_join_addrs = consul_advertise_addrs | difference(consul_advertise_addr) %}
{
  "node_name": "{{ consul_node_name }}",
  "domain": "{{ consul_domain }}",
  "datacenter": "{{ consul_datacenter }}",
  "server": {{ consul_is_server | default("true") }},
  "data_dir": "{{ consul_data_dir }}",
  "bind_addr": "{{ consul_advertise_addr }}",
  "advertise_addr": "{{ consul_advertise_addr }}",
  "bootstrap_expect": {{ consul_advertise_addrs | length }},
  "encrypt": "{{ consul_encrypt }}",
{% if consul_join_addrs | length > 0 %}
  "retry_join": [ "{{ consul_join_addrs | join('", "') }}" ],
{% endif %}
{% if acl_agent_token is defined %}
  "acl_agent_token": "{{ acl_agent_token }}",
  "acl_default_policy": "deny",
{% else %}
  "acl_default_policy": "allow",
{% endif %}
  "acl_datacenter": "{{ consul_datacenter }}",
  "acl_down_policy": "deny",
  "addresses": {
    "http": "127.0.0.1 {{ consul_advertise_addr }}"
  },
  "ports": {
    "http": 8500
  }
}